<h3>Privacy / Security / Sensitive Data</h3>
<p>For your protection, we never store or process your credit card information on our servers.</p>

<%= form_tag '/subscriptions', id: 'payment-form' do %>
    <span class="payment-errors"></span>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="card-number"><%= t('.card_number') %></label>
      <div class="col-sm-10">
        <input id="card-number" class="form-control" type="text" size="20" data-stripe="number">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t('.expiration') %></label>
      <div class="col-sm-10 form-inline">
        <input id="exp-month" class="form-control" type="text" size="2" data-stripe="exp_month">
        <span> / </span>
        <input id="exp-year" class="form-control" type="text" size="2" data-stripe="exp_year">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="cvc"><%= t('.cvc') %></label>
      <div class="col-sm-10">
        <input id="cvc" class="form-control" type="text" size="4" data-stripe="cvc">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="zipcode"><%= t('.zipcode') %></label>
      <div class="col-sm-10">
        <input id="zipcode" class="form-control" type="text" data-stripe="address_zip">
      </div>
    </div>

    <input type="submit" class="submit btn btn-success pull-right" value="<%= t('.subscribe') %>">
<% end %>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
  Stripe.setPublishableKey('<%= Rails.application.secrets.stripe_public_key %>');

  $(function() {
    var $form = $('#payment-form');
    $form.submit(function(event) {
      $form.find('.submit').prop('disabled', true);
      Stripe.card.createToken($form, stripeResponseHandler);
      return false;
    });
  });

  function stripeResponseHandler(status, response) {
    var $form = $('#payment-form');

    if (response.error) {
      console.log(response.error);
      $form.find('.payment-errors').text(response.error.message);
      $form.find('.submit').prop('disabled', false);
    } else {
      var token = response.id;
      $form.append($('<input type="hidden" name="token">').val(token));
      $form.get(0).submit();
    }
  }
</script>
